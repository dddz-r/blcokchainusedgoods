<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:text="판매자 정보"
    android:textColor="@color/mainTextColor"
    android:textStyle="bold"
    android:textSize="25dp"/>

    <TextView
        android:id="@+id/si_seller_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="판매자 아이디"
        android:textColor="@color/darkGray"
        android:visibility="invisible"
        android:layout_gravity="center"/>

        <TextView
            android:id="@+id/si_seller_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="판매자 이름"
            android:textColor="@color/darkGray"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:layout_margin="50dp"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="370dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/si_buy_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/button_fill_border"
            android:text="구매내역"
            android:textColor="@color/darkGray"
            android:textStyle="bold" />

        <Button
            android:id="@+id/si_sell_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/button_fill_border"
            android:text="판매내역"
            android:textColor="@color/darkGray"
            android:textStyle="bold" />

        <Button
            android:id="@+id/si_review"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/button_fill_border"
            android:text="후기"
            android:textColor="@color/darkGray"
            android:textStyle="bold" />


    </LinearLayout>

    <Button
        android:id="@+id/si_lets_talk"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="@drawable/button_fill_border"
        android:text="톡 보내기"
        android:layout_gravity="center"
        android:textColor="@color/darkGray"
        android:textStyle="bold" />

</LinearLayout>