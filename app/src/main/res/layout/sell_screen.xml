        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="거래한 적 있는 상품인가요? (자동으로 설명을 채워줍니다!)"
            android:layout_gravity="center"
            android:buttonTint="@color/mainTextColor"
