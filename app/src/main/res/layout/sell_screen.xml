        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="거래한 적 있는 상품인가요? (자동으로 설명을 채워줍니다!)"
            android:layout_gravity="center"
            android:buttonTint="@color/mainTextColor"
            android:textColor="@color/darkGray"/>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

    <TextView
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="30dp"
        android:text="상품명"
        android:textAlignment="center"
        android:textColor="@color/darkGray">

    </TextView>

    <EditText
        android:id="@+id/device_name"
        android:layout_width="250dp"
        android:layout_height="49dp"
        android:layout_marginLeft="5dp"
        android:textColor="@color/darkGray"
        android:background="@drawable/buttonborder_maintextcolor">

    </EditText>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:text="상품가격"
            android:textAlignment="center"
            android:textColor="@color/darkGray">

        </TextView>

        <EditText
            android:id="@+id/device_price"
            android:layout_width="250dp"
            android:layout_height="49dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/buttonborder_maintextcolor"
            android:inputType="number"
            android:textColor="@color/darkGray">

        </EditText>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:text="카테고리"
            android:textAlignment="center"
            android:textColor="@color/darkGray">

        </TextView>

        <Spinner
            android:id="@+id/device_category"
            android:layout_width="250dp"
            android:layout_height="49dp"
            android:layout_marginLeft="5dp"
            android:entries="@array/category"
            android:textColor="@color/darkGray"
            android:background="@drawable/buttonborder_maintextcolor">

        </Spinner>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:text="상품설명"
            android:textAlignment="center"
            android:textColor="@color/darkGray">

        </TextView>

        <EditText
            android:id="@+id/device_inform"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:layout_marginLeft="5dp"
            android:selectAllOnFocus="false"
            android:singleLine="false"
            android:layout_marginRight="5dp"
            android:inputType="textMultiLine"
            android:visibility="visible"
            android:textColor="@color/darkGray"
            android:background="@drawable/buttonborder_maintextcolor">

        </EditText>

    </LinearLayout>


    <Button
        android:id="@+id/sell_Ok"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_fill_border"
        android:text="물품등록"
        android:textColor="@color/darkGray"
        android:textStyle="bold" />
    </LinearLayout>
</ScrollView>

</LinearLayout>