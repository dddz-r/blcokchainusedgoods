<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_gravity="center">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight="1"
        android:text="상품명"
        android:textAlignment="center"
        android:textColor="@color/darkGray">

    </TextView>

    <EditText
        android:id="@+id/device_name"
        android:layout_width="0dp"
        android:layout_weight="4"
        android:layout_height="49dp"
        android:gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="20dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textColor="@color/darkGray"
        android:background="@drawable/buttonborder_maintextcolor">

    </EditText>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="상품가격"
            android:textAlignment="center"
            android:textColor="@color/darkGray">

        </TextView>

        <EditText
            android:id="@+id/device_price"
            android:layout_width="0dp"
            android:layout_height="49dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="20dp"
            android:layout_weight="4"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="@drawable/buttonborder_maintextcolor"
            android:inputType="number"
            android:textColor="@color/darkGray">

        </EditText>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="카테고리"
            android:textAlignment="center"
            android:textColor="@color/darkGray">

        </TextView>

        <Spinner
            android:id="@+id/device_category"
            android:layout_width="0dp"
            android:layout_height="49dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="20dp"
            android:layout_weight="4"
            android:entries="@array/category"
            android:textColor="@color/darkGray"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="@drawable/buttonborder_maintextcolor">

        </Spinner>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="상품설명"
            android:textAlignment="center"
            android:textColor="@color/darkGray">

        </TextView>

        <EditText
            android:id="@+id/device_inform"
            android:layout_width="0dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="20dp"
            android:layout_weight="4"
            android:layout_height="200dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:selectAllOnFocus="false"
            android:singleLine="false"
            android:inputType="textMultiLine"
            android:visibility="visible"
            android:textColor="@color/darkGray"
            android:background="@drawable/buttonborder_maintextcolor">

        </EditText>

    </LinearLayout>


    <Button
        android:id="@+id/sell_Ok"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_fill_border"
        android:text="물품등록"
        android:stateListAnimator="@null"
        android:textColor="@color/darkGray"
        android:textStyle="bold" />
    </LinearLayout>
</ScrollView>

</LinearLayout>